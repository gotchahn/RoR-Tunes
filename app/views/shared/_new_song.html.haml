= render partial: "shared/errors", locals: {obj: @album}

%h1 Agregar nueva cancion

%p Ingresa los datos de la nueva cancion

= form_for([@album, @album.songs.build]) do |f|

  .field
    = f.label :album_id, "Album"
    = f.collection_select :album_id, Album.order(:title), :id, :title

  .field
    = f.label :title, "Titulo"
    = f.text_field :title

  .field
    = f.label :duration, "Duracion"
    = f.text_field :duration

  .field
    = f.label :music_and_lyrincs_by, "Musica y Lirica por"
    = f.text_field :music_and_lyrincs_by




  .field
    = f.submit